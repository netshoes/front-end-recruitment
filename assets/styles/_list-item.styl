.list-product-wrap {
  lost-center: 700px;
  margin-top: 20px;
}
.list-product-item {
  lost-column: 1/3;
  margin-bottom: 20px;
  .list-link {
    color: #000;
    text-decoration: none;
  }
  figure {
    lost-center: 180px;
    padding: 1em;
  }
  .list-product-title {
    text-align: center;
    font-size: 14px;
    margin-bottom: 10px;
    line-height: 18px;
    &:after {
      content: "";
      width: 15px;
      background-color: #DFBB00;
      height: 2px;
      display: block;
      lost-center: 30px;
      margin-top: 10px;
    }
  }
  .list-product-price {
    font-size: 12px;
    display: block;
    text-align: center;
    strong {
      font-size: 24px;
    }
  }
  .parcel-price {
    font-size: 14px;
    display: block;
    text-align: center;
    color: #999;
    margin-top: 5px;
  }
}
