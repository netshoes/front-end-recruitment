.cart-wrap {
  background-color: #1F1F25;
  width: 515px;
  color: #fff;
  position: fixed;
  right: 0;
  top: 0;
  height: 100%;
  box-shadow: 0px 0px 10px #666;
  h1 {
    text-transform: uppercase;
  }
  .icon-saloca {
    background: url("../../assets/images/sprite.png") no-repeat -4px -2px;
    width: 40px;
    height: 45px;
    display: block;
    position: absolute;
    left: 50%;
    margin-left: -110px;
    top: 35px;
  }
}
.list-cart-item {
  float: left;
  cursor: pointer;
  &:hover {
    background-color: #131316;
  }
  figure {
    width: 50px;
    float: left;
    margin-right: 15px;
  }
  .list-cart-title {
    font-size: 14px;
    margin-bottom: 5px;
  }
  .cart-product-info {
    color: #999;
    font-size: 12px;
    display: block;
    margin-bottom: 5px;
  }
  .list-cart-info {
    float: left;
    width: 405px;
    position: relative;
    .list-cart-price {
      position: absolute;
      right: 0;
      bottom: 0;
      color: #DFBD00;
      font-size: 14px;
    }
    .icon-close {
      background: url("../../assets/images/sprite.png") no-repeat -5px -50px;
      width: 20px;
      height: 20px;
      display: block;
      position: absolute;
      right: 0;
      top: 0;
      &:hover {
        background-position: -25px -50px;
      }
    }
  }
  .list-cart-content {
    border-top: 2px solid #000;
    border-bottom: 2px solid #000;
    float: left;
    padding: 15px 0;
    margin: 0px 20px;
  }
}
.logo-wrap {
    position: relative;
}
.quant-cart {
    background-color: #dfbd00;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    color: #000;
    font-size: 12px;
    position: absolute;
    left: 50%;
    top: 60px;
    margin-left: -90px;
    padding: 8px;
    text-align: center;
    font-weight: bold;
}
.btn-buy {
    width: 465px;
    margin: 20px auto;
    display: block;
    background-color: #000;
    border: none;
    color: #fff;
    text-transform: uppercase;
    padding: 1em;
    border-radius: 5px;
    font-weight: bold;
}
.cart-subtotal {
    color: #ccc;
    text-transform: uppercase;
    font-size: 13px;
}
.cart-info {
    float: left;
    width: 100%;
    padding: 20px;
    height: 50px;
}
.cart-price-total {
    color: #dfbd00;
    font-size: 16px;
    float: right;
    margin-right: 45px;
}
.cart-parcel-price {
    color: #46464a;
    text-transform: uppercase;
    font-size: 13px;
    position: relative;
    right: -73px;
    float: right;
    top: 22px;
}
