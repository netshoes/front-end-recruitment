.cart-wrap {
  background-color: #1F1F25;
  width: 515px;
  color: #fff;
  position: fixed;
  right: 0;
  top: 0;
  height: 100%;
  box-shadow: 0px 0px 10px #666;
  h1 {
    text-transform: uppercase;
  }
  .icon-saloca {
    background: url("../../assets/images/sprite.png") no-repeat -4px -2px;
    width: 40px;
    height: 45px;
    display: block;
    position: absolute;
    left: 50%;
    margin-left: -110px;
    top: 35px;
  }
}
.list-cart-item {
  padding: 1em;
  float: left;
  cursor: pointer;
  &:hover {
    background-color: #131316;
  }
  figure {
    width: 50px;
    float: left;
    margin-right: 15px;
  }
  .list-cart-title {
    font-size: 14px;
    margin-bottom: 5px;
  }
  .cart-product-info {
    color: #999;
    font-size: 12px;
    display: block;
    margin-bottom: 5px;
  }
  .list-cart-info {
    float: left;
    width: 415px;
    position: relative;
    .list-cart-price {
      position: absolute;
      right: 0;
      bottom: 0;
      color: #DFBD00;
      font-size: 14px;
    }
    .icon-close {
      background: url("../../assets/images/sprite.png") no-repeat -5px -50px;
      width: 20px;
      height: 20px;
      display: block;
      position: absolute;
      right: 0;
      top: 0;
      &:hover {
        background-position: -25px -50px;
      }
    }
  }
}
