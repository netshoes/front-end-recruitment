@import "../settings/_settings.defaults"

.product
	color base-text-color
	display inline-block
	max-width 210px
	text-decoration none
	text-align center
	
.product__name
	display block
	font-size 14px
	letter-spacing -.5px
	line-height 17px
	margin-bottom 17px
	min-height 37px
	
.product__image-holder
	display block
	margin-bottom 7px

.product__image
	max-width 180px
	width 100%
	
.product__price
	display block
	font-size 12px
	line-height 18px
	
	.product--price__integer
		font-weight 600
		font-size 24px
		position relative
		letter-spacing -1px
		
		&:after
			background highlight-color
			content ''
			position absolute
			top -1px
			left 40%
			width 15px
			height 1.5px
			
.product__instalments
	color subtext-color
	font-size 13px

.circle-button--add-cart
	transition opacity 0.2s linear
	position relative
	float right
	margin-top 10px

	.icon
		display inline-block
		margin-top 11px
		position absolute
		left 22%
		top -5%
		font-size 16px
		transition-property opacity, transform
		transition-duration 0.4s
		transition-timing-function cubic-bezier(0.23, 1, 0.32, 1)
		
	&.added
		.icon-plus
			opacity 0
			
		.icon-ok
			transform scale(1)
			opacity 1
	
	.icon-ok
		opacity 0
		transform scale(0)
		
	&:hover
		.product__options-holder
			display block
			opacity 1

		.icon-plus
			transform rotate(-90deg)
	
	&.hidden
		opacity 0

.product__options-container
	bottom 1%
	left 11%
	position absolute
	height 64px
	width 80%
	
	&:hover
		.product__options-holder
			display block
	
.product__options-holder
	border-radius 5px
	background bag-background
	display none
	padding 8px 0px 2px 11px
	font-size 10px
	float left
	transform opacity 0.4s linear
	width 136px
	
	fieldset
		border 0
		padding 0
		margin 0 0 5px 0
		width 100%
	
	label
		color #ffffff
		display inline-block
		margin-right 10px
		text-align left
		float left
		width 65px

.product__options
	background #e9e9e9
	margin-right 10px
	width 50px
	
	&.product__options--sizes
		right 40%
		
	&.product__options--quantity
		right 68%