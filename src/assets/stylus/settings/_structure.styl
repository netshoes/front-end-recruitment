@import "../../../../node_modules/normalize-styl/normalize"
@import "_fontello"
@import "_settings.defaults"

body, 
html
	height auto

body
	font-family base-font-family
	font-size 12px
	min-height 100%
	overflow-x hidden
	
.wrapper
	max-width 760px
	margin 0 auto
	height 100%

.cart
	position relative
	display inline-block
	width 100%
	height 100%
	padding-top 80px

.products-list
	list-style-type none
	padding 0
	
	.products-list__holder
		float left
		margin-bottom 55px
		text-align center
		position relative
		height 350px
		width: 33%
		
		@media all and (max-width: 685px)
			width 50%
			
		@media all and (max-width: 458px)
			width 100%
			
.cart-menu
	cursor pointer
	font-size 16px
	position absolute
	top 10px
	right 10px
	
	&:hover
		.icon-menu:before
			color highlight-color

.cart-menu__counter
	border-radius 50%
	background highlight-color
	color #000000
	display inline-block
	text-align center
	font-weight 700
	width 14px
	height 14px
	font-size 9px
	padding-top 1px